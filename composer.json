{
    "name": "cfxmarkets/php-exchange-lib",
    "description": "A public PHP api library to access the CFX Markets exchange",
    "type": "library",
    "keywords": [ "cfx", "cfxmarkets", "api", "client", "exchange" ],
    "license": "MIT",
    "authors": [
        {
            "name": "CFX and contributors",
            "homepage": "https://github.com/cfxmarkets/php-exchange-lib/graphs/contributors"
        }
    ],
    "require" : {
        "php" : ">=5.3.0",
        "cfxmarkets/php-public-api-header" : ">=0.0",
        "guzzlehttp/guzzle" : "~6.3"
    },
    "require-dev" : {
        "phpunit/phpunit" : "~6.2"
    },
    "autoload" : {
        "psr-4" : {
            "CFX\\" : "src/"
        }
    }
}
