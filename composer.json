{
    "name": "cfxmarkets/php-exchange-sdk",
    "description": "A public PHP SDK for accessing the CFX Markets exchange",
    "type": "library",
    "keywords": [ "cfx", "cfxmarkets", "cfx", "api", "client", "exchange", "sdk" ],
    "license": "MIT",
    "authors": [
        {
            "name": "CFX and contributors",
            "homepage": "https://github.com/cfxmarkets/php-exchange-sdk/graphs/contributors"
        }
    ],
    "require" : {
        "php" : ">=5.4.0",
        "psr/http-message": "~1.0",
        "cfxmarkets/php-cfx-framework": "~0.1.0"
    },
    "require-dev" : {
        "phpunit/phpunit" : "~4.8.0",
        "guzzlehttp/guzzle" : "~5.0",

        "kael-shipman/php-jsonapi-objects": "dev-dev-v2 as 1.0.0",
        "kael-shipman/php-jsonapi-transport": "dev-dev-v2 as 0.4.0",
        "cfxmarkets/php-cfx-framework": "dev-dev-v2 as 0.1.0"
    },
    "autoload" : {
        "psr-4" : {
            "CFX\\SDK\\Exchange\\" : "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../new-data-model/php-cfx-framework"
        },
        {
            "type": "path",
            "url": "../new-data-model/php-cfx-public-models"
        },
        {
            "type": "git",
            "url": "https://github.com/cfxmarkets/php-std-traits.git"
        },
        {
            "type": "git",
            "url": "https://github.com/cfxmarkets/php-jsonapi-objects.git"
        },
        {
            "type": "git",
            "url": "https://github.com/cfxmarkets/php-jsonapi-transport.git"
        },
        {
            "type": "git",
            "url": "https://github.com/kael-shipman/psr7.git"
        }
    ]
}
